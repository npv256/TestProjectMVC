@model UniversityControl.Models.StudentDTO

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Student info</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Login)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Role)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Role)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Password)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Password)
        </dd>
        
        <dt>
            @Html.LabelFor(model => model.Sciences)
        </dt>
        
        <dd>
            <table>

                @for (var i = 0; i < Model.Sciences.Count(); i++)
            {
                    <tr>
                        <td>
                            @Html.CheckBoxFor(model => model.Sciences[i].Checked, new { Style = "vertical-            align:3px}" })
                            @Html.ValidationMessageFor(model => model.Sciences[i].Checked)
                        </td>

                        <td>
                            @Html.HiddenFor(model => model.Sciences[i].Id)
                            @Html.HiddenFor(model => model.Sciences[i].Name)
                            @Html.DisplayFor(model => model.Sciences[i].Name)
                        </td>
                    </tr>

                }
            </table>
        </dd>
</dl>
</div>

